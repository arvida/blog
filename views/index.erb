<ul id="articles">
  <% @recent.each do |article| %>
    <li>
      <%= render_article article, true %>
    </li>
  <% end %>
</ul>
<% if @archived.any? %>
<h3><a href="/archives">Older posts</a></h3>
<%= render_archived @archived %>
<% end %>
<% if Serious::Page.all.any? %>
<h3><a href="/pages">Pages</a></h3>
<%= render_archived Serious::Page.all %>
<% end %>
